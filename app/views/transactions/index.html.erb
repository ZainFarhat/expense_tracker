<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Transactionaccount</th>
      <th>Transactiontype</th>
      <th>Transactionamount</th>
      <th>Transactiondate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user.LastName, transaction.user.FirstName %></td>
        <td><%= transaction.TransactionAccount %></td>
        <td><%= transaction.TransactionType %></td>
        <td><%= transaction.TransactionAmount %></td>
        <td><%= transaction.TransactionDate %></td>
        <td><%= link_to 'Show User', [@user] %></td>
        <td><%= link_to 'Edit Transaction', edit_user_transaction_path(@user, transaction) %></td>
        <td><%= link_to 'Destroy Transaction', [@user, transaction], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_user_transaction_path(@user) %>
